<div class="row">
  <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <% @posts.each do |post| %>            
      <div class="post-preview">
        <a href="/posts/<%=post.id%>">
          <h2 class="post-title">
            <%= post.title %>
          </h2>
        </a>
        <div class=""> 
          <%= truncate(post.description , length: 150 ) { link_to "Continue", post_path(post) }%>
        </div>
        <p class="post-meta">Posted by <a href="#">Veeru</a> on <%= post.created_at %> </p>
      </div>
      <hr>
    <% end %>
    <!-- Pager -->
    <ul class="pager">
      <li class="next">
        <a href="#">Older Posts &rarr;</a>
      </li>
    </ul>
  </div>
</div>
